{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (CLANG64, C++)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p build && clang++ -std=c++20 -O0 -g3 -Wall -Wextra main.cpp $(pkg-config --cflags --libs gtk4) -o build/app_clang64.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "run (CLANG64, C++)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "./build/app_clang64.exe"
      ],
      "dependsOn": "build (CLANG64, C++)",
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}